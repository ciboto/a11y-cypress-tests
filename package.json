{
  "name": "a11y-cypress-tests",
  "version": "1.0.0",
  "description": "Testes de acessibilidade com Cypress e cypress-axe",
  "scripts": {
    "test": "cypress run",
    "report:merge": "mochawesome-merge cypress/reports/json/*.json > cypress/reports/mochawesome.json",
    "report:generate": "marge cypress/reports/mochawesome.json --reportDir cypress/reports/html",
    "report": "npm run report:merge && npm run report:generate"
  },
  "devDependencies": {
    "axe-core": "^4.10.3",
    "cypress": "^14.5.3",
    "cypress-axe": "^1.6.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}